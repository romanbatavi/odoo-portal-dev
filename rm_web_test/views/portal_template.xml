<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/my/tes_product</t>
                <t t-set="title">Web Test</t>
                <t t-set="placeholder_count" t-value="'product_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'view_tes_product'" class="breadcrumb-item">Products</li>
        </xpath>
    </template>

    <template id="view_tes_product">
        <t t-call="website.layout">
            <section style="background-color: #eee;">
                <div class="text-center container py-5">
                    <a t-attf-href="/my/tes_product/new_tes_product">
                        <button type="button" class="btn btn-primary">Create Product</button>
                    </a>
                    <h4 class="mt-4 mb-5">
                        <strong>Our Products</strong>
                    </h4>
                    <div class="row">
                        <t>
                            <t t-foreach="products" t-as="product">
                                <div class="col-lg-4 col-md-12 mb-4">
                                    <div class="card">
                                        <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
                                            <img t-if="product.image_1920" t-att-src="image_data_uri(product.image_1920)" style="max-height: 150px;"/>
                                            <div class="mask">
                                                <div class="d-flex justify-content-start align-items-end h-100">
                                                    <h5>
                                                        <span class="badge bg-primary ms-2">New</span>
                                                    </h5>
                                                </div>
                                            </div>
                                            <div class="hover-overlay">
                                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title mb-3">
                                                <a t-attf-href="/my/tes_product/#{product.id}">
                                                    <t t-esc="product.name"/>
                                                </a>
                                            </h5>
                                            <p>
                                                <t t-esc="product.categ_id.name"/>
                                            </p>
                                            <h6 class="mb-3">
                                                <t t-esc="product.list_price"/>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>
                </div>
            </section>
        </t>
    </template>

    <template id="view_form_tes_product">
        <t t-call="website.layout">
            <t t-if="page_name == 'view_form_product'">
                <section style="background-color: #eee;">
                    <div class="row">
                        <t t-foreach="products" t-as="product">
                            <div class="col-lg-4">
                                <div class="card mb-4">
                                    <div class="card-body text-center">
                                        <!-- <img t-if="product.image_1920" t-att-src="image_data_uri(product.image_1920)" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;"/> -->
                                        <img t-if="product.image_1920" t-att-src="image_data_uri(product.image_1920)" alt="avatar" style="width: 135px;"/>
                                        <h5 class="my-3">
                                            <t t-esc="product.name"/>
                                        </h5>
                                        <!-- <p class="text-muted mb-1">Full Stack Developer</p>
                                        <p class="text-muted mb-4">Bay Area, San Francisco, CA</p> -->
                                        <div class="d-flex justify-content-center mb-2">
                                            <button type="button" class="btn btn-primary">Edit</button>
                                            <!-- <button type="button" class="btn btn-outline-primary ms-1">Message</button> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Product</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <t t-esc="product.name"/>
                                                </p>
                                            </div>
                                        </div>
                                        <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <p class="mb-0">Barcode</p>
                                                </div>
                                                <div class="col-sm-9">
                                                    <p class="text-muted mb-0">
                                                        <t t-esc="product.barcode"/>
                                                    </p>
                                                </div>
                                            </div>
                                        </hr>
                                        <!-- <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <p class="mb-0">Product Type</p>
                                                </div>
                                                <div class="col-sm-9">
                                                    <p class="text-muted mb-0">
                                                        <t t-esc="{False: False, 'consu': 'Consumable', 'service': 'Service'}[product.type]"/>
                                                    </p>
                                                </div>
                                            </div>
                                        </hr> -->
                                        <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <p class="mb-0">Internal Reference</p>
                                                </div>
                                                <div class="col-sm-9">
                                                    <p class="text-muted mb-0">
                                                        <t t-esc="product.default_code"/>
                                                    </p>
                                                </div>
                                            </div>
                                        </hr>
                                        <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <p class="mb-0">Price</p>
                                                </div>
                                                <div class="col-sm-9">
                                                    <p class="text-muted mb-0">
                                                        <t t-esc="product.lst_price"/>
                                                    </p>
                                                </div>
                                            </div>
                                        </hr>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </section>
            </t>
        </t>
    </template>

    <template id="view_create_form_tes_product">
        <t t-call="website.layout">
            <div class="alert alert-success" role="alert" t-if="success_message">
                <t t-esc="success_message"/>
            </div>
            <t t-foreach="error_list" t-as="error">
                <div class="alert alert-danger" role="alert">
                    <t t-esc="error"/>
                </div>
            </t>
            <form method="post">
                <section style="background-color: #eee;">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <!-- <img t-if="product.image_1920" t-att-src="image_data_uri(product.image_1920)" alt="avatar" style="width: 135px;"/> -->
                                    <!-- <input type="file" name="image_1920" class="file" multiple="true" data-show-upload="true" data-show-caption="true" class="file" data-show-preview="true"/> -->
                                    <input id="image_1920" name="image_1920" type="file" class="file" data-show-preview="false"/>
                                    <h5 class="my-3">
                                        <!-- <t t-esc="product.name"/> -->
                                    </h5>
                                    <div class="d-flex justify-content-center mb-2">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Product</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <input type="char" name="name" id="name"/>
                                        </div>
                                    </div>
                                    <!-- <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Product Type</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <select name="type" id="type">
                                                        <option>Product Type Selection</option>
                                                        <option t-attf-value="'consu'">Consumable</option>
                                                        <option t-attf-value="'service'">Service</option>
                                                    </select>
                                                </p>
                                            </div>
                                        </div>
                                    </hr> -->
                                    <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Barcode</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input type="char" name="barcode" id="barcode"/>
                                            </div>
                                        </div>
                                    </hr>
                                    <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Internal Reference</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input type="char" name="default_code" id="default_code"/>
                                            </div>
                                        </div>
                                    </hr>
                                    <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Price</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input type="char" name="lst_price" id="lst_price"/>
                                            </div>
                                        </div>
                                    </hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </t>
    </template>
</odoo>
